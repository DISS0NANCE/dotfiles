set statusbar-h-padding 0
set statusbar-v-padding 0

map [normal] l navigate next
map [fullscreen] l navigate next
map [normal] h navigate previous
map [fullscreen] h navigate previous

map [normal] <Left> navigate previous
map [fullscreen] <Left> navigate previous
map [normal] <Right> navigate next
map [fullscreen] <Right> navigate next

map [normal] <C-e> scroll down
map [fullscreen] <C-e> scroll down
map [normal] <C-y> scroll up
map [fullscreen] <C-y> scroll up

map [normal] <S-Space> navigate previous
map [fullscreen] <S-Space> navigate previous
map [normal] <C-Space> navigate previous
map [fullscreen] <C-Space> navigate previous

map [normal] <C-h> scroll left
map [normal] <C-j> scroll down
map [normal] <C-k> scroll up
map [normal] <C-l> scroll right
map [fullscreen] <C-h> scroll left
map [fullscreen] <C-j> scroll down
map [fullscreen] <C-k> scroll up
map [fullscreen] <C-l> scroll right

set recolor-darkcolor "#aaaaaa"
set recolor-lightcolor "#222222"
set recolor-reverse-video true

set font 'Monoid 8'

set statusbar-basename false
set statusbar-home-tilde true

set statusbar-bg '#FFFFFF00'
set statusbar-fg '#FF7500'

set default-bg '#222222'

set window-title-basename true

# set guioptions 's'  # statusbar
