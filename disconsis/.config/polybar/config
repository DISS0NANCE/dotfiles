[colors]
; IMP: colors are #ARGB, not #RGBA

background = #222
transparent-background = #0000
slightly-transparent-background= #dd222222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #dfdfdf
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
red = #ff4230
yellow = #f6d75b
light-grey = #aaa
blue = #00afee
blue-green = #48b8d6

dull-red = #8f4230
dull-yellow = #a6973b
dull-grey = #757777

[bar/main]
monitor = ${env:MONITOR:HDMI2}
bottom = true
width = 100%
height = 26

; offset-x = 12
; offset-y = 5%

radius = 0.0
fixed-center = true

background = ${colors.slightly-transparent-background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 0

font-0 = Monoid:pixelsize=8
font-1 = Material Icons:pixelsize=11
font-2 = FuraCode Nerd Font:pixelsize=10
font-3 = siji:pixelsize=10
font-4 = file\-icons:pixelsize=10

modules-left = i3
modules-center = xwindow
modules-right = memory battery separator brightnessctl volume separator time date

tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/xmonad]
inherit = bar/main
modules-left = workspaces-xmonad
modules-center = title-xmonad

[module/separator]
type = custom/text
content = " "
content-foreground = ${colors.light-grey}

[module/brightnessctl]
type = custom/script
exec = brightnessupdate.sh
scroll-up = sudo brightnessctl -d intel_backlight set 2%+ &
scroll-down = sudo brightnessctl -d intel_backlight set 2%- &
format-prefix = " "
format-prefix-foreground = ${colors.red}
format-underline = ${colors.dull-yellow}
interval = 0
tail = true

[module/xwindow]
type = internal/xwindow
label = %title:0:70:...%

[module/filesystem]
type = internal/fs
interval = 25
fixed-values = true

mount-0 = /

format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.red}
label-mounted = %free%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

strip-wsnumbers = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
; label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.yellow}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.light-grey}
; label-unfocused-background = #333
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
; label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

enable-click = false
enable-scroll = false
wrapping-scroll = false



[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
