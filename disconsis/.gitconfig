[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = p4merge
[alias]
	co = commit
	ch = checkout
	br = branch
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    diffs = diff --staged
[color]
	ui = auto
[core]
	excludesfile = /home/disconsis/.gitignore
    pager = delta --theme='Monokai Extended' #  --plus-color="#012800" --minus-color="#340001"
    # pager = delta

[interactive]
    diffFilter = delta --color-only
