def_key "9"
    show_help

# consistent volume settings {{{
def_key "+":
    show_clock

def_key "=":
    volume_up
# }}}

# more vim {{{
def_key "j":
    scroll_down
def_key "k":
    scroll_up

def_key "ctrl-u":
    page_up
def_key "ctrl-d":
    page_down

def_key "h":
    previous_column
def_key "l":
    next_column

def_key "h":
    require_screen "browser"
    jump_to_parent_directory
def_key "l":
    require_screen "browser"
    enter_directory

def_key "n":
    next_found_item
def_key "N":
    previous_found_item

def_key "J":
    move_sort_order_down
def_key "K":
    move_sort_order_up

def_key "t":
    jump_to_position_in_song
def_key "g":
    move_home
def_key "G":
    move_end

def_key "0":
    replay_song
# }}}

