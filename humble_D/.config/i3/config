# ----------------------------- CUSTOM CODE ------------------------------------------------------------------------------------

# setting up wallpaper on startup
exec_always feh --bg-scale ~/custom_wallpapers/hacker.jpg

# lock screen with i3lock
bindsym $mod+x exec ~/custom_scripts/lock.sh -n

# enable natural scroll and horizontal scroll
# synclient
exec_always --no-startup-id synclient VertScrollDelta=-30 HorizScrollDelta=-30 HorizTwoFingerScroll=1
# dell client
exec_always xinput set-prop 11 273 -30, -30
exec_always xinput set-prop 11 275 1, 1

# brightness controls
# TODO

# sound controls for soundcard 0
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume 0 +5%
bindsym XF86AudioMute exec pactl -- set-sink-mute 0 toggle

# screenshot controls using imagemagik
bindsym Print exec ~/custom_scripts/screenshot.sh

# autolock using xautolock
exec_always xautolock -time 30 -locker ~/custom_scripts/lock.sh &

# xrandr commands
exec_always ~/custom_scripts/xrander_script.sh

# launch rofi instead of dmenu
bindsym $mod+d exec rofi -show run -hide-scrollbar -lines 6 -eh 2 -width 100 -padding 335 -opacity "90" -bw 3 -bc "#32ae85" -bg "$bg-color" -fg "$inactive-text-color" -hlbg "$bg-color" -hlfg "#34febb" -font "System San Francisco Display 18"

# start compton
exec compton -f

